  "description": "A Cross-Platform Browser for Steam Servers",
  "main": "electron/main.js",
  "repository": "https://github.com/oukhali99/SteamServerBrowser-Windows-Linux",
  "author": "oukhali99",
  "license": "MIT",
  "private": false,
  "browserslist": {
    "production": [
      ">0.2%",
