    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "electron-serve": "^1.0.0"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^2.5.0",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@types/react-redux": "^7.1.34",
    "cra-template": "1.2.0",
    "cross-env": "^7.0.3",
    "electron": "^34.0.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "react-scripts": "5.0.1",
    "redux-thunk": "^3.1.0",
    "typescript": "^5.7.3",
    "wait-on": "^8.0.2",
    "web-vitals": "^4.2.4"
  },
  "scripts": {
    "start": "run-p react:start electron:start-wrapper",
